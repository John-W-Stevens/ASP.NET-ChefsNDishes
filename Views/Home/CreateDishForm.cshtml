@{
    ViewData["Title"] = "Create a Dish";
}

@model Dish

<div class="row">
    <div class="col-12 text-center">
        <h1>Create a Dish</h1>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <form asp-action="CreateDish" asp-controller="Home" method="post">

            <div class="form-group">
                <label asp-for="Name"></label>&nbsp<span asp-validation-for="Name" class="error-message"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Calories"></label>&nbsp<span asp-validation-for="Calories" class="error-message"></span>
                <input asp-for="Calories" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tastiness"></label>&nbsp<span asp-validation-for="Tastiness" class="error-message"></span>
                <input asp-for="Tastiness" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>&nbsp<span asp-validation-for="Description" class="error-message"></span>
                <textarea asp-for="Description" class="form-control" ></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ChefId"></label>&nbsp<span asp-validation-for="ChefId" class="error-message"></span>
                <select asp-for="ChefId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Chefs, "ChefId", "FirstName"))">
                </select>
            </div>
            <div class="form-group text-right">
                <button class="btn btn-primary">Add a Dish</button>
            </div>
        </form>
    </div>
</div>



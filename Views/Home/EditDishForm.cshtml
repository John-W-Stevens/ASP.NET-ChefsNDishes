@{
    ViewData["Title"] = "Read/Update/Delete a Dish";
}

@model Dish

<div class="row">
    <div class="col-12 text-center">
        <h1>Read/Update/Delete a Dish</h1>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-10 offset-md-1">
        <form asp-action="UpdateDish" asp-route-dishId=@Model.DishId asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>&nbsp<span asp-validation-for="Name" class="error-message"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Calories"></label>&nbsp<span asp-validation-for="Calories" class="error-message"></span>
                <input asp-for="Calories" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Tastiness"></label>&nbsp<span asp-validation-for="Tastiness" class="error-message"></span>
                <input asp-for="Tastiness" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>&nbsp<span asp-validation-for="Description" class="error-message"></span>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ChefId"></label>&nbsp<span asp-validation-for="ChefId" class="error-message"></span>
                <input asp-for="ChefId" class="form-control" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-primary">Edit Dish</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-10 offset-md-1">
        <form asp-action="DeleteDish" asp-route-dishId=@Model.DishId asp-controller="Home" method="post">
            <input type="hidden" name="Delete" />
            <div class="form-group text-center">
                <button class="btn btn-danger">Delete this Dish</button>
            </div>
        </form>
    </div>
</div>

